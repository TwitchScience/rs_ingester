{
  "variables":{
    "project": null,
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "binary_dir": null,
    "scripts_dir": null,
    "vpc_id": null,
    "subnet_id": null,
    "security_group_id": null,
    "branch": null,
    "source_ami": null,
    "use_private_ip": null
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_name": "{{user `project`}}-{{user `branch`}}-{{timestamp}}",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "ssh_username": "ubuntu",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "m4.large",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "ssh_private_ip": "{{user `use_private_ip`}}",
    "security_group_id": "{{user `security_group_id`}}",
     "run_tags": {
      "type": "builder"
    },
    "tags": {
      "type": "{{user `project`}}",
      "description": "{{user `branch`}}"
    }

  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/{{user `project`}}/bin",
        "sudo mkdir -p /opt/science",
        "sudo mv /tmp/{{user `project`}} /opt/science/{{user `project`}}"
      ]
    },
    {
      "type": "file",
      "source": "{{user `binary_dir`}}/rs_ingester",
      "destination": "/opt/science/{{user `project`}}/bin/rs_ingester"
    },
    {
      "type": "file",
      "source": "{{user `binary_dir`}}/dbstorer",
      "destination": "/opt/science/{{user `project`}}/bin/dbstorer"
    },
    {
      "type": "file",
      "source": "build/scripts/",
      "destination": "/opt/science/{{user `project`}}/bin"
    },
    {
      "type": "file",
      "source": "build/config/upstart",
      "destination": "/opt/science/{{user `project`}}"
    },
    {
      "type": "file",
      "source": "build/config/nginx.conf",
      "destination": "/opt/science/{{user `project`}}/nginx.conf"
    },
    {
      "type": "file",
      "source": "init_db/init.sql",
      "destination": "/opt/science/{{user `project`}}/init.sql"
    },
    {
      "type": "shell",
      "inline":
      [
        "sudo apt-get update",
        "sudo apt-get -y install nginx",

        "sudo rm /etc/nginx/sites-*/default",
        "sudo ln -s /opt/science/{{user `project`}}/nginx.conf /etc/nginx/sites-enabled/{{user `project`}}",

        "sudo chmod +x /opt/science/{{user `project`}}/bin/*",
        "for f in /opt/science/{{user `project`}}/upstart/*.conf; do sudo ln -s $f /etc/init/$(basename $f); done"
      ]
    }
  ]
}
